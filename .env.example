# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=workflows
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Application Configuration
APP_ENV=development
APP_VERSION=0.1.0
APP_NAME=intelligent-workflows
DEFAULT_APPROVER_EMAIL=approver@example.com

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# LLM Provider Configuration
# Provider can be "anthropic" or "openai"
LLM_PROVIDER=anthropic
LLM_API_KEY=
LLM_DEFAULT_MODEL=
LLM_TIMEOUT=60s
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1s
LLM_BASE_URL=

# Notification Configuration
NOTIFICATION_BASE_URL=http://localhost:8080
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMTP_HOST=smtp.gmail.com
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USER=
NOTIFICATION_SMTP_PASSWORD=
NOTIFICATION_FROM_ADDRESS=noreply@example.com
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK_URL=

# CORS Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000

# Background Workers Configuration
# How often workers check for tasks to process
WORKER_APPROVAL_EXPIRATION_INTERVAL=5m
WORKER_WORKFLOW_RESUMER_INTERVAL=1m
WORKER_TIMEOUT_ENFORCER_INTERVAL=1m
WORKER_SCHEDULER_INTERVAL=1m
